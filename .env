# .env

# Docker Configuration
DOCKER_HOST=unix://var/run/docker.sock
DOCKER_API_VERSION=1.45
DOCKER_TLS_VERIFY=0

# YCSB Configuration
YCSB_HOME=/opt/ycsb
YCSB_VERSION=0.17.0

# Network Configuration
LIMOCE_HOST=localhost
LIMOCE_PORT=8080
LIMOCE_API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=ycsb
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042

# Resource Limits
DEFAULT_CONTAINER_CPU_QUOTA=100000
DEFAULT_CONTAINER_MEMORY_LIMIT=512m
DEFAULT_CONTAINER_NETWORK_MODE=bridge

# Migration Configuration
CHECKPOINT_BASE_DIR=/tmp/checkpoints
MIGRATION_TIMEOUT=300
HEARTBEAT_INTERVAL=5
MAX_RETRY_ATTEMPTS=3

# Metrics Configuration
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
METRICS_INTERVAL=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/limoce/limoce.log
ENABLE_DEBUG=false

# Performance Configuration
MAX_CONCURRENT_MIGRATIONS=5
WORKLOAD_BATCH_SIZE=1000
BUFFER_SIZE=65536

# Edge Device Configuration
EDGE_DEVICE_USERNAME=edge
EDGE_DEVICE_PASSWORD=edge123
EDGE_DEVICE_SSH_KEY=/home/edge/.ssh/id_rsa

# Benchmark Configuration
BENCHMARK_RESULTS_DIR=/var/lib/limoce/results
ENABLE_VISUALIZATION=true
PLOT_FORMAT=png